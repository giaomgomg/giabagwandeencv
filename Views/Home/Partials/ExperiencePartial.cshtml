@model GBCV.Models.CVModels

@if (Model.Experiences != null && Model.Experiences.Any())
{
    <section id="experience" class="mb-5">
        <div class="section-header">
            <h2><i class="fas fa-child me-2"></i> Work Experience</h2>
        </div>

        <div class="experience-list">
            @foreach (var exp in Model.Experiences)
            {
                <div class="experience-item card mb-3 hover-effect">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="card-title text-purple">@exp.Position</h4>
                                <h5 class="card-subtitle mb-2">@exp.Company</h5>
                            </div>
                            <span class="badge bg-purple-light text-purple">@exp.Duration</span>
                        </div>

                        <div class="mt-3">
                            <p class="card-text">@exp.Description</p>

                            <!-- Added leadership paragraph -->
                            <div class="leadership-note mb-3 p-3 bg-light-purple rounded">
                                <p class="mb-0">
                                    <i class="fas fa-star text-purple me-2"></i>
                                    <strong>Leadership Development:</strong> Teaching dance has significantly enhanced my leadership skills, particularly when stepping in to lead classes in my manager's absence. This responsibility has strengthened my ability to think independently, manage classroom dynamics, and make quick decisions while maintaining the quality of instruction. These experiences have fostered my growth in accountability, problem-solving, and adaptability.
                                </p>
                            </div>

                            <ul class="skills-list mt-2">
                                <li><i class="fas fa-check-circle text-purple me-2"></i> Teaching authentic Bollywood dance techniques</li>
                                <li><i class="fas fa-check-circle text-purple me-2"></i> Specializing in instruction for ages 2-10</li>
                                <li><i class="fas fa-check-circle text-purple me-2"></i> Developing age-appropriate choreography</li>
                                <li><i class="fas fa-check-circle text-purple me-2"></i> Incorporating cultural elements and storytelling</li>
                                <li><i class="fas fa-check-circle text-purple me-2"></i> Preparing students for performances and recitals</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}
else
{
    <div class="alert alert-info">No experience found.</div>
}

<style>
    .hover-effect {
        transition: all 0.3s ease;
        border-left: 4px solid var(--primary-purple);
    }

        .hover-effect:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(126, 87, 194, 0.15);
        }

    .skills-list {
        list-style-type: none;
        padding-left: 0;
    }

        .skills-list li {
            margin-bottom: 5px;
        }

    .fa-child {
        color: var(--primary-purple);
    }

    /* Added style for leadership note */
    .bg-light-purple {
        background-color: rgba(126, 87, 194, 0.1);
    }

    .leadership-note {
        border-left: 3px solid var(--primary-purple);
    }
</style>