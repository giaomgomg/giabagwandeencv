@model GBCV.Models.CVModels

<div class="card mb-4 animate-on-scroll">
    <div class="card-header bg-white">
        <h4><i class="fas fa-user-graduate text-purple me-2"></i>Student Profile</h4>
    </div>
    <div class="card-body">
        <p class="lead">@Model.ProfessionalSummary</p>
        <div class="row mt-3">
            <div class="col-md-6">
                <h5><i class="fas fa-star text-gold me-2"></i>Current Focus</h5>
                <ul>
                    <li>Application Development</li>
                    <li>Web Technologies</li>
                    <li>Database Systems</li>
                </ul>
            </div>
         
        </div>
    </div>
</div>

<style>
    .text-gold {
        color: var(--accent-gold);
    }
</style>