@model GBCV.Models.CVModels

<div class="contact-section card mb-4">
    <div class="card-header">
        <h4><i class="fas fa-address-card me-2"></i>Contact</h4>
    </div>
    <div class="card-body">
        <ul class="list-unstyled">
            <li><i class="fas fa-envelope me-2"></i> @Model.Email</li>
            <li><i class="fas fa-phone me-2"></i> @Model.Phone</li>
            <li><i class="fas fa-map-marker-alt me-2"></i> @Model.Location</li>
            @if (!string.IsNullOrEmpty(Model.LinkedIn))
            {
                <li><i class="fab fa-linkedin me-2"></i> <a href="https://@Model.LinkedIn" target="_blank">LinkedIn Profile</a></li>
            }
            @if (!string.IsNullOrEmpty(Model.Website))
            {
                <li><i class="fas fa-globe me-2"></i> <a href="https://@Model.Website" target="_blank">Personal Website</a></li>
            }
        </ul>
    </div>
</div>