<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Computer and Information Science Student | Varsity College</title>

    <style>
        /* Animation Definitions */
        @@keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-15px);
            }
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        @@keyframes underline {
            0% {
                width: 0;
            }

            100% {
                width: 100%;
            }
        }

        /* Color Variables */
        :root {
            --primary-purple: #7E57C2;
            --light-purple: #B39DDB;
            --lighter-purple: #EDE7F6;
            --dark-purple: #5E35B1;
            --accent-gold: #FFD54F;
            --vc-blue: #003366;
            --vc-gold: #FFC72C;
        }

        /* Utility Classes */
        .text-purple {
            color: var(--primary-purple);
        }

        .bg-purple-light {
            background-color: var(--lighter-purple);
        }

        .bg-purple {
            background-color: var(--primary-purple);
        }

        .bg-vc-blue {
            background-color: var(--vc-blue);
        }

        .text-vc-gold {
            color: var(--vc-gold);
        }

        /* Animation Classes */
        .float-animate {
            animation: float 6s ease-in-out infinite;
        }

        .pulse-animate {
            animation: pulse 2s ease infinite;
        }

        .will-animate {
            opacity: 0;
            transform: translateY(20px);
        }

        .animate-in {
            opacity: 1;
            transform: translateY(0);
            transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        }
    </style>

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Animation Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cv-style.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />

    <!-- SEO Meta Tags -->
    <meta name="description" content="BCAD Student at Varsity College Sandton - Online Portfolio">
    <meta name="keywords" content="BCAD, Varsity College, Student Portfolio, Application Development">
    <meta name="author" content="Gia Bagwandeen">
</head>
<body>
    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background: linear-gradient(135deg, var(--vc-blue), var(--dark-purple));">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-user-graduate me-2"></i>BCAD Portfolio
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link nav-hover" href="#home">
                                <i class="fas fa-home me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-hover" href="#education">
                                <i class="fas fa-university me-1"></i> Education
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-hover" href="#skills">
                                <i class="fas fa-code me-1"></i> Skills
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-hover" href="#projects">
                                <i class="fas fa-laptop-code me-1"></i> Projects
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-hover" href="#coursework">
                                <i class="fas fa-book me-1"></i> Coursework
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-hover" href="#contact">
                                <i class="fas fa-envelope me-1"></i> Contact
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-5 pt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-white py-4" style="background: linear-gradient(135deg, var(--dark-purple), var(--vc-blue));">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5><i class="fas fa-graduation-cap float-animate me-2"></i>BCAD Student Portfolio</h5>
                    <p class="mb-0">Varsity College Sandton | Class of @DateTime.Now.AddYears(1).Year</p>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <div class="social-links">
                        <a href="https://linkedin.com/in/yourprofile" target="_blank" class="social-icon">
                            <i class="fab fa-linkedin fa-lg"></i>
                        </a>
                        <a href="https://github.com/yourusername" target="_blank" class="social-icon">
                            <i class="fab fa-github fa-lg"></i>
                        </a>
                        <a href="mailto:your.email@example.com" class="social-icon">
                            <i class="fas fa-envelope fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
            <hr class="my-3" style="border-color: rgba(255,255,255,0.1);" />
            <div class="row">
                <div class="col-md-6">
                    &copy; @DateTime.Now.Year - Gia Bagwandeen - BCAD Student
                </div>
                <div class="col-md-6 text-md-end">
                    <small>Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <a href="#" class="btn btn-purple back-to-top" id="backToTop" style="background: var(--primary-purple);">
        <i class="fas fa-arrow-up"></i>
    </a>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Animation Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize GSAP
            gsap.registerPlugin(ScrollTrigger);

            // Animate navigation items
            gsap.from(".nav-item", {
                duration: 0.6,
                y: 20,
                opacity: 0,
                stagger: 0.1,
                delay: 0.3,
                ease: "back.out(1.2)"
            });

            // Animate elements on scroll
            gsap.utils.toArray(".will-animate").forEach(el => {
                gsap.to(el, {
                    scrollTrigger: {
                        trigger: el,
                        start: "top 80%",
                        toggleActions: "play none none none"
                    },
                    opacity: 1,
                    y: 0,
                    duration: 0.8,
                    ease: "back.out(1.2)"
                });
            });

            // Social icon animations
            gsap.utils.toArray(".social-icon").forEach((icon, i) => {
                gsap.from(icon, {
                    scrollTrigger: {
                        trigger: icon,
                        start: "top 90%"
                    },
                    scale: 0,
                    opacity: 0,
                    duration: 0.5,
                    delay: i * 0.1,
                    ease: "elastic.out(1, 0.5)"
                });

                // Hover effects
                icon.addEventListener("mouseenter", () => {
                    gsap.to(icon, {
                        scale: 1.2,
                        duration: 0.3
                    });
                });
                icon.addEventListener("mouseleave", () => {
                    gsap.to(icon, {
                        scale: 1,
                        duration: 0.3
                    });
                });
            });

            // Back to top button
            const backToTop = document.getElementById('backToTop');
            gsap.set(backToTop, { opacity: 0, y: 20 });

            ScrollTrigger.create({
                onUpdate: (self) => {
                    if (self.direction === -1 && self.scroll() > 300) {
                        gsap.to(backToTop, {
                            opacity: 1,
                            y: 0,
                            duration: 0.3
                        });
                    } else if (self.direction === 1 || self.scroll() <= 300) {
                        gsap.to(backToTop, {
                            opacity: 0,
                            y: 20,
                            duration: 0.3
                        });
                    }
                }
            });

            backToTop.addEventListener("click", (e) => {
                e.preventDefault();
                gsap.to(window, {
                    scrollTo: 0,
                    duration: 0.8,
                    ease: "power2.inOut"
                });
            });
        });
    </script>

    <style>
        /* Navigation Hover Effects */
        .nav-hover {
            position: relative;
            transition: color 0.3s ease;
        }

            .nav-hover::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--accent-gold);
                transition: width 0.3s ease;
            }

            .nav-hover:hover::after {
                width: 100%;
            }

        /* Social Icons */
        .social-icon {
            display: inline-block;
            margin-left: 15px;
            color: white;
            transition: all 0.3s ease;
        }

            .social-icon:hover {
                transform: translateY(-3px);
            }

        /* Back to Top Button */
        .back-to-top {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(126, 87, 194, 0.3);
            transition: all 0.3s ease;
            z-index: 99;
        }

            .back-to-top:hover {
                transform: translateY(-5px) scale(1.1);
                box-shadow: 0 6px 20px rgba(126, 87, 194, 0.4);
            }
    </style>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>